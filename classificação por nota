3. Classificação por Nota
-------------------------------
#include <iostream>
using namespace std;

int main() {
    int nota;
    cout << "Digite uma nota de 0 a 10: ";
    cin >> nota;

    switch(nota) {
        case 10:
        case 9:
            cout << "Conceito A" << endl;
            break;
        case 8:
        case 7:
            cout << "Conceito B" << endl;
            break;
        case 6:
        case 5:
            cout << "Conceito C" << endl;
            break;
        case 4:
        case 3:
            cout << "Conceito D" << endl;
            break;
        case 2:
        case 1:
        case 0:
            cout << "Conceito E" << endl;
            break;
        default:
            cout << "Nota inválida!" << endl;
    }
    return 0;
}
